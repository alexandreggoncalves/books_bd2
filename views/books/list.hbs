          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Livros cadastrados</h5>
              {{#if delete }}
                <div class="alert alert-success alert-dismissible fade show" id="alertDelete" role="alert">
                  O registro foi excluído com sucesso!
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              {{/if}}
              <!-- Table with hoverable rows -->
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Páginas</th>
                    <th scope="col">Preço</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each books}}
                  <tr>
                    <th scope="row">{{this._id}}</th>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td>{{this.publishedYear}}</td>
                    <td>{{this.price}}</td>
                    <td>
                      <a href="/books/addOrEdit/{{this._id}}">
                        <button type="button" class="btn btn-primary"><i class="bi bi-book"></i></button>
                      </a>
                      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete{{this._id}}"><i class="bi bi-trash"></i></button>
                    </td>
                  </tr>
                  <div class="modal fade" id="delete{{this._id}}" tabindex="-1">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">ATENÇÃO!</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Deseja realemnte excluir o registro: <span class="badge rounded-pill bg-warning text-dark">{{this._id}}</span>?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-success" data-bs-dismiss="modal">NÃO</button>
                          <a href="/books/delete/{{this._id}}">
                            <button type="button" class="btn btn-danger">SIM</button>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div><!-- End Basic Modal-->
                  {{/each}}
                </tbody>
              </table>
              <!-- End Table with hoverable rows -->

            </div>
          </div>